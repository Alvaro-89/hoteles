<!--VARIABLES: p_usuario-->

<div class="row justify-content-center">
  <div class="card w-25 mt-1">
    <div class="card-body">
      <div class="card-title">
        <h4 class="mt-1 mb-4 text-center">Actualizar información usuario</h4>
      </div>
      <%= form_with(model: p_usuario) do |formulario| %>

        <!--nombre-->
        <div class="mb-3">
          <%= formulario.label      :nombre, class:'form-label'%>
          <%= formulario.text_field :nombre, class:'form-control' %>
          <% if p_usuario.errors[:nombre].any? %>
            <div class="text-danger">
              <%= p_usuario.errors[:nombre].first %>
            </div>
          <% end %>
        </div>

        <!--identificación-->
        <div class="mb-3">
          <%= formulario.label      :num_identificacion, class:'form-label'%>
          <%= formulario.text_field :num_identificacion, class:'form-control' %>
          <% if p_usuario.errors[:num_identificacion].any? %>
            <div class="text-danger">
              <%= p_usuario.errors[:num_identificacion].first %>
            </div>
          <% end %>
        </div>

        <!--telefono-->
        <div class="mb-3">
          <%= formulario.label      :telefono, class:'form-label'%>
          <%= formulario.text_field :telefono, class:'form-control' %>
          <% if p_usuario.errors[:telefono].any? %>
            <div class="text-danger">
              <%= p_usuario.errors[:telefono].first %>
            </div>
          <% end %>
        </div>

        <!--password-->
        <div class="mb-3">
          <%= formulario.label          :password, class:'form-label'%>
          <%= formulario.password_field :password, class:'form-control' %>
          <% if p_usuario.errors[:password].any? %>
            <div class="text-danger">
              <%= p_usuario.errors[:password].first %>
            </div>
          <% end %>
        </div>

        <!--password_confirmation-->
        <div class="mb-3">
          <%= formulario.label          :password_confirmation, class:'form-label'%>
          <%= formulario.password_field :password_confirmation, class:'form-control' %>
          <% if p_usuario.errors[:password_confirmation].any? %>
            <div class="text-danger">
              <%= p_usuario.errors[:password_confirmation].first %>
            </div>
          <% end %>
        </div>

      <%= formulario.submit class:'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>
