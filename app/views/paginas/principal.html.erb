    <div class="row">
      <% @hoteles_encontrados.each do |he| %>
        
        <%= link_to info_hotel_path(he), class:"w-25 m-2 text-decoration-none" do %>
          <%= render "tarjeta", p_titulo: he.nombre, p_subtitulo: he.ciudad.nombre %>
        <% end %>

      <% end %>

