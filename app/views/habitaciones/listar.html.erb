<div class="card">
<div class="card-body">
  <h3>Lista de habitaciones registradas</h3>

  <table class= "table table-hover">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Disponibilidad</th>
      <th>Hotel</th>
      <th class="text-center">Acciones</th>
    </tr>
    <% @habitaciones.each do |h| %>
      <tr>
        <td>
          <%= h.id %>
        </td>
        <td>
          <%= h.nombre %>
        </td>
        <td>
          <%= h.precio %>
        </td>
        <td>
          <%= if h.estado_reserva == true
                "Reservado"
              else
                "Disponible"
              end %>
        </td>
        <td> <%= link_to h.hotel.nombre, hotel_path(h.hotel.id) %> </td>
        <td class="text-center">
          <%= link_to "Editar", editar_habitacion_path(h), class:"btn btn-outline-warning" %>
          <%= link_to "Eliminar", habitacion_path(h),
          class: 'btn btn-outline-danger',
          method: :delete,
          data: {confirm: "Confirma que deseas elminar esta habitaciÃ³n"}
          %>
        </td>
      </tr>
    <% end %>
  </table>


</div>
</div>