<div class="card">
<div class="card-body">
  <h3>Lista de habitaciones registradas</h3>

  <table class= "table table-hover">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Disponibilidad</th>
      <th>Hotel</th>
      <th class="text-end">Acciones</th>
    </tr>
    <% @habitaciones.each do |h| %>
      <tr>
        <td>
          <%= h.id %>
        </td>
        <td>
          <%= h.nombre %>
        </td>
        <td>
          <%= h.precio %>
        </td>
        <td>
          <%= if h.estado_reserva == true
                "Reservado"
              else
                "Disponible"
              end %>
        </td>
        <td>
          <%= h.hotel.nombre %>
        </td>
        <td class="text-end">
          <span>Editar</span>
          <span>Eliminar</span>
        </td>
      </tr>
    <% end %>
  </table>


</div>
</div>