
<div class="card mb-3">
  <div class="card-body">
    <h5><%= @ciudad.nombre %></h5>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @ciudad.hoteles.any? %>
      <table class="table">
        <% @ciudad.hoteles.each do |h| %>
          <tr>
            <td> <%= h.nombre %> </td>
            <td>
              <% h.estrellas.to_i.times do |e|%> 
                ‚≠ê
              <% end %>
            </td>
            <td>
              Habitaciones: <%= h.habitaciones.count %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      Sin hoteles registrados

    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= link_to "Registrar nuevo Hotel", nuevo_hotel_con_ciudad_path(@ciudad), class: 'btn btn-primary mt-3 col-md-2 offset-md-10' %>
  </div>
</div>