

<div class="card">
  <div class="card-body">
    <h3>Lista de ciudades registradas</h3>

<% if flash[:error_ciudad] %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:error_ciudad] %>
  </div>
<% end %>

    <%= link_to "Crear nueva ciudad", nueva_ciudad_path %>

    <table class="table table-hover">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th class="text-end">Acciones</th>
      </tr>
      <% @lista_ciudades.each do |c| %>
        <tr>
          <td>
            <%= c.id %>
          </td>
          <td>
            <%= link_to c.nombre, ciudad_path(c) %>
          </td>
          <td class="text-end">
            <%= link_to "Editar", editar_ciudad_path(c), class: "btn btn-outline-warning" %>
            <%= link_to "Eliminar", ciudad_path(c), method: :delete,
            data: {confirm: "Estás seguro(a) que deseas eliminar esta ciudad?"},
            class: "btn btn-outline-danger" %> <!--se puede escribir también como ciudad_delete_path, pero no es lo más común.-->
          </td>  
        </tr>
      <% end %>
    </table>
  </div>
</div>