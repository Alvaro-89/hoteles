<div class="card mb-3">
  <div class="card-body">
    <h5><%= @hotel.nombre %></h5>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @hotel.habitaciones.any? %>
      <table class="table">
      <tr>
        <th>Nombre Habitación</th>
        <th>Precio</th>
        <th>Estado Reserva</th>
      </tr>
        <% @hotel.habitaciones.each do |hab| %>
          <tr>
            <td> <%= hab.nombre %> </td>
            <td> <%= hab.precio %> </td>
            <td>
              <%= if hab.estado_reserva == true
                "Reservado"
                else
                "Disponible"
                end %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      Sin habitaciones registradas

    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= link_to "Registrar nueva habitación", nueva_habitacion_con_hotel_path(@hotel), class: 'btn btn-primary mt-3 col-md-2 offset-md-10' %>
  </div>
</div>